@model List<MvcEmpleados.Models.Empleado>;

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Lista de empleados</h2>
        <a asp-controller="Empleado" asp-action="Nuevo" class="btn btn-success mb-3">Nuevo</a>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre Completo</th>
                    <th>Correo Electrónico</th>
                    <th>Fecha Contrato</th>
                    <th>Activo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.IdEmpleado</td>
                        <td>@item.NombreCompleto</td>
                        <td>@item.Correo</td>
                        <td>@item.FechaContrato.ToString("dd/MM/yyyy")</td>
                        <td>@(item.Estado ? "SI" : "NO")</td>
                        <td class="d-flex">
                            <a asp-controller="Empleado" asp-action="Editar" class="btn btn-primary me-2" asp-route-Id="@item.IdEmpleado">Editar</a>
                            <a asp-controller="Empleado" asp-action="Eliminar" class="btn btn-danger" asp-route-Id="@item.IdEmpleado" onclick="return confirmar()">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>

@section Scripts{
    <script>
        function confirmar()
        {
            return confirm("¿Desea Eliminar Empleado Seleccionado?")
        }
    </script>
}